version="001"

usage() {
    cat <<EOF
Usage: where COMMAND

Write the package COMMAND belongs to to standard ouput

Options:
  --version             show version number and exit
  -h, --help            show this help message and exit
EOF
}

case $1 in
-h|--help) usage && exit ;;
--version) echo "where-$version" && exit ;;
esac

equery belongs $(which $1) | tail -n-1 | head -n 1
