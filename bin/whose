version="003"

usage() {
    cat <<EOF
Usage: where COMMAND

Write the package COMMAND belongs to to standard output.

Options:
  --version             show version number and exit
  -h, --help            show this help message and exit
EOF
}

[ -z "$1" ] && echo "whose: missing COMMAND argument" && exit 1

case $1 in
-h|--help) usage && exit ;;
--version) echo "where-$version" && exit ;;
esac

path=$(which $1) || exit 1
equery belongs --early-out $path
